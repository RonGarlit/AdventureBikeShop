<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title - Adventure Bike Shop Web Application</title>
    @* Populate MetaData some passed from the control *@
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="description" content="@ViewBag.Description" />
    <meta name="author" content="@ViewBag.Author" />

    @* favicon.ico for the browser URL address stored in root with Globals.asx file *@
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    @* Start of HTML Body - Menu a.k.a NavBar goes here for anything coming from controller views
        Also note that all the class attributes are for Bootstrap v3.x in this application.
    *@
    <div class="navbar navbar-default navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Adventure Bike Shop", "Index", "Home", new { area = "Home" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "Home" }, null)</li>
                    <li>@Html.ActionLink("Shop", "Products", "Product", new { area = "Shop" }, null)</li>
                    <li>@Html.ActionLink("About", "About", "Home", new { area = "Home" }, null)</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "Home" }, null)</li>

                    @if (Request.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Admin <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li>@Html.ActionLink("RolesAdmin", "RoleIndex", "RolesAdmin", new { area = "Administration" }, null)</li>
                                <li>@Html.ActionLink("UsersAdmin", "Index", "UsersAdmin", new { area = "Administration" }, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Reporting", "UnderConstruction", "Home", new { area = "Home" }, null)</li>
                                <li>@Html.ActionLink("Dashboard", "UnderConstruction", "Home", new { area = "Home" }, null)</li>
                                <li>@Html.ActionLink("Ad Hoc Reporting", "UnderConstruction", "Home", new { area = "Home" }, null)</li>
                                <li class="divider"></li>
                                <li>@Html.ActionLink("Error Management", "UnderConstruction", "Home", new { area = "Home" }, null)</li>
                            </ul>
                        </li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div> @* <--- End of "navbar navbar-default navbar-fixed-top"*@

    @*//Start of Body inserts from pages into layout*@
    <div class="container body-content">
        @RenderBody()
    </div>
    <hr />
    @* Footer of layout and thus the web page rendered to browser *@

    <footer>
        <p>&copy; @DateTime.Now.Year - Adventure Bike Shop Web Application</p>
    </footer>


    @* IMPORTANT: For performance the CSS and JavaScript last!!  Here. *@
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/bikeshop")

    @RenderSection("scripts", required: false)
</body>
</html>
